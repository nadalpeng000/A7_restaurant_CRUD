<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
      <a href="/restaurants/new" class="btn btn-secondary">新增餐廳</a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{!-- example --}}
        {{#each restaurants}}
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2">{{this.category}}</i>
            </div>



            <div class="d-flex justify-content-between">
              <form>
                <div class="badge badge-pill badge-danger font-weight-normal"
                  style="--bs-btn-padding-y: .05rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </div>
              </form>

              <div class="d-flex">
                <form class="mx-1">
                  <a href="/restaurants/{{this._id}}/edit" class="btn btn-secondary"
                    style="--bs-btn-padding-y: .05rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">edit</a>
                </form>
                <form class="mx-1">
                  <a href="/restaurants/{{this._id}}" class="btn btn-secondary"
                    style="--bs-btn-padding-y: .05rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">detail</a>
                </form>
                <form action="/restaurants/{{this._id}}/delete" method="POST" class="mx-1">
                  <button type="submit" class="btn btn-secondary"
                    style="--bs-btn-padding-y: .05rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>